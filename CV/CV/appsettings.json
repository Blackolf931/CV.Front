{
  "Serilog": {
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate":
            "{Timestamp:HH:mm:ss} [{Level:u4}] (Thread:{ThreadId} Process:{ProcessId} {Message:} {NewLine:} {Exception:}"
        }
      }
    ],
    "Enrich": [
      "WithProcessId",
      "WithThreadId"
    ],
    "AllowedHosts": "*"
  }
}
